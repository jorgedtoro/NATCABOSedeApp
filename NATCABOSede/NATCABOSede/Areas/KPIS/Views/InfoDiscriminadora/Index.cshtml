@model NATCABOSede.ViewModels.DatosKpiViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Discriminadora";
}
<link rel="stylesheet" href="~/css/pages/Discriminadora.css" />

<div class="container mt-4 text-center">
    <h1 class="display-4 fw-bold">@Model.NombreLinea</h1>
</div>

<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h2 class="card-title">Cliente</h2>
                    <p class="card-text data-value">@Model.Cliente</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h2 class="card-title">Producto</h2>
                    <p class="card-text data-value">@Model.Producto</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-3">
    <div class="card shadow-sm">
        <div class="card-body text-center">
            <h2 class="card-title">Estado del Pedido</h2>
            <div class="progress" style="height: 30px;">
                <div class="progress-bar bg-success progress-bar-striped" role="progressbar"
                     style="width: @Model.PorcentajePedido.ToString("F0")%;"
                     aria-valuenow="@Model.PorcentajePedido.ToString("F0")"
                     aria-valuemin="0" aria-valuemax="100">
                    @Model.PorcentajePedido.ToString("F0")%
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h2 class="card-title">PPM</h2>
                    <p class="card-text data-large">1,23</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h3 class="card-title">Objetivo</h3>
                    <p class="card-text data-large">1,23</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <h2 class="card-title">Personal Periférico</h2>
                    <div class="personal-indicator mb-4">9</div>
                    <h2 class="card-subtitle mb-4 mt-2">Distribución de Personal</h2>
                    <div class="d-flex flex-column">
                    <p><strong>Personal en Balanza</strong></p>
                        <span class="data-large">31</span>

                    </div>
                    <div class ="d-flex flex-column">

                    <p><strong>Personal Total</strong></p>
                        <span class="data-large">40</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <h2 class="card-title">Estado del Discriminador</h2>
                    <h3 class="card-subtitle mb-2 text-muted">Confección Usada</h3>
                    <div class="d-flex traffic-light">

                    <p><strong>Rangos de Peso:</strong> </p>
                        <span class="status-indicator bg-danger">Incorrecto</span>
                    </div>
                    <div class="d-flex traffic-light">

                    <p><strong>Activo/Inactivo:</strong> </p>
                        <span class="status-indicator bg-success">Correcto</span>
                    </div>
                    <div class="d-flex traffic-light">
                    <p><strong>Expulsión por Aire:</strong> </p>
                        <span class="status-indicator bg-success">Correcto</span>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
