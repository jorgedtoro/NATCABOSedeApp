@using NATCABOSede.ViewModels
@model List<LineaKpiViewModel>

@{
    ViewData["Title"] = "Envasadora " + ViewBag.Discriminadora;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Info Envasadoras</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Tu CSS personalizado -->
    <link href="~/css/pages/infoenvasadoras.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid mt-4">
        <div class="row g-4 justify-content-center">
            @foreach (var linea in Model)
            {
                
                <div class="col-12 col-md-6">
                    <div class="linea-wrapper">
                        <!-- Título y logos -->
                        <div class="row mb-3 titulo-linea gx-3">
                            <div class="col-auto imagen">
                                <img src="/images/UnicaLogo.jpg" alt="Logo Unica" class="logo-linea" />
                            </div>
                            <div class="col titulo">
                                <h1 class="fw-bold nombre-linea mb-0">@linea.NombreLinea</h1>
                            </div>
                            <div class="col-auto imagen">
                                <img src="/images/Logo_Natursur.png" alt="Logo Natursur" class="logo-linea" />
                            </div>
                        </div>

                        <!-- Cards -->
                        <div class="row gx-3">
                        
                            <div class="col-12 col-sm-6">
                                <div class="card shadow-sm text-center tarjeta-kpi">
                                    <div class="card-body">
                                        <h2 class="card-title text-uppercase">PPM</h2>
                                        <p class="card-text fs-2 fw-bold">@linea.PPM.ToString("N2")</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="card shadow-sm text-center tarjeta-kpi">
                                    <div class="card-body">
                                        <h2 class="card-title text-uppercase">Objetivo</h2>
                                        <p class="card-text fs-2 fw-bold">@linea.Objetivo.ToString("N2")</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /Cards -->
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
